<h1>New Book</h1>
<%= form_with model: book do |f| %>
<div>
<%= f.label :title %><br>
<%= f.text_field :title,autofocus: true,class: "form-control" %>
</div>
<div class="mt-3">
<%= f.label :body,"Opinion" %><br>
<%= f.text_area :body,class: "form-control" %>
</div>
<div class="mt-3">
<%= f.submit "Create Book",class: "btn btn-primary" %>
</div>

<% end %>
