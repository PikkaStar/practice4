<div class="container">
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editting User</h1>

<% if @user.errors.any? %>
<%= @user.errors.count %>件のエラー
<% @user.errors.full_messages.each do |message| %>
<li>
  <%= message %>
</li>
<% end %>
<% end %>

<%= form_with model: @user do |f| %>
<div>
<%= f.label :name %><br>
<%= f.text_field :name,autofocus: true,class: "form-control" %><br>
</div>

<%= f.file_field :profile_image,accept: "image/*" %><br>
<div class="mt-3">
<%= f.label :introduction %><br>
<%= f.text_area :introduction,class: "form-control" %><br>
</div>

<%= f.submit "Update User",class: "btn btn-success" %>

<% end %>
</div>
</div>
</div>