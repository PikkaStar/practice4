<h1>Editting User</h1>

<%= form_with model: @user do |f| %>
<div>
<%= f.label :name %><br>
<%= f.text_field :name,autofocus: true %><br>
</div>

<%= f.file_field :profile_image,accept: "image/*" %><br>

<%= f.label :introduction %><br>
<%= f.text_area :introduction %><br>

<%= f.submit "Update User" %>

<% end %>